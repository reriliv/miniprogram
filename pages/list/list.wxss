@import '../templates/template.wxss';
@import '../iconfont/iconfont.wxss';

.page{ margin: 0; width: 100%; height: 100%; background: #f3f5f6; overflow: hidden; }

.header{ position: relative; margin-top: 80rpx; width: 100%; }
.banner{ margin: 80rpx auto 0; width: 100%; }
.banner image{ display: block; width: 100%; }
.card-nav-list{ display: flex; justify-content: center; align-items: center; height: 72rpx; background: #f3f5f6; }
.card-nav-item{ width: 20%; font-size: 16px; text-align: center; line-height: 70rpx; border-bottom: 2rpx solid transparent; }
.active{ border-bottom: 2rpx solid #ff0000; }
.card-sort{ display: flex; justify-content: space-between; align-items: center; }
.sort-item{ width: 50%; text-align: center; line-height: 80rpx; background: #fff; border-right: 1rpx solid #aaa; font-size: 16px; color: #000; }
.sort-item:last-child{ border-right: 0; }

.sort-panel{ position: absolute; left: 0; top: 336rpx; z-index: 100; width: 100%; height: 100%; border-top: 1rpx solid #aaa; }
.shadow{ position: absolute; top: 0; left: 0; z-index: 99; width: 100%; height: 100%; background: rgba(0, 0, 0, 0.6); }
.sort-list{ display: block; position: relative; z-index: 100; padding: 0 30rpx; background: #fff; }
.sort-child{ display: flex; justify-content: space-between; align-items: center; height: 78rpx; line-height: 78rpx; border-bottom: 2rpx solid #ccc; font-size: 16px; color: #333; }
.sort-child radio{ position: absolute; z-index: 1; }
.sort-content{ display: flex; justify-content: space-between; align-items: center; position: relative; z-index: 10; width: 100%; background: #fff; }
.sort-content icon{ line-height: 2.5; }
.color-list{ display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; position: relative; z-index: 100; background: #fff; }
.color-list-mask{ position: absolute; top: 0; left: 0; width: 100%; height: 100%; z-index: 1000000; }
.color-content{ position: relative; margin: 22.5rpx; width: 80rpx; height: 80rpx; }
.color-content checkbox{ position: absolute; z-index: 1; }
.color-item{ position: relative; z-index: 10; width: 78rpx; height: 78rpx; border: 1rpx solid #ccc; }
.color-item icon{ position: absolute; bottom: 0; right: 0; background: #fff; border-radius: 10rem; }

.card-list-content, .card-list-content-sort{ display: flex; justify-content: flex-start; flex-wrap: wrap; align-items: center; margin-bottom: 120rpx; width: 100%; height: 100%; }
.card-item{ display: inline-block; position: relative; margin: 15rpx 2% 0; width: 46%; text-align: center; }
.card-item image{ display: inline-block; width: 100%; }
.card-item view{ display: flex; justify-content: space-between; align-items: center; position: absolute; bottom: 10rpx; left: 0; width: 100%; height: 40rpx; }
.card-item text{ width: 50%; height: 100%; text-align: center; line-height: 40rpx; background: rgba(0, 0, 0, 0.6); color: #fff; font-size: 16px; white-space:nowrap; text-overflow: ellipsis; overflow: hidden; }

.bottom-nav-bar{ display: flex; justify-content: space-between; align-items: center; position: fixed; bottom: 0; left: 0; z-index: 99999999; width: 100%; height: 120rpx; border-top: 1rpx solid #ccc; background: #fff; }

.ball {
  box-shadow:2px 2px 10px #AAA;
  border-radius: 20px;
  position: absolute; 
 }