.top-search-bar{ display: flex; justify-content: center; align-items: center; position: fixed; left: 0; top: 0; z-index: 100; width: 100%; height: 80rpx; background-image: url('./assets/tap-background.jpg'); background-size: 100% auto; }
.top-search-bar text{ font-size: 14px; }
.search-background{ position: absolute; top: 0; left: 0; width: 100%; height: 80rpx; z-index: 5; overflow: hidden; }
.search-background image{ width: 100%; height: 100%; }
.top-msg{ margin-left: 15rpx; z-index: 10; width: 60rpx; height: 60rpx; }
.top-msg image{ display: block; width: 100% }
.search-bar{ display: flex; justify-content: space-between; align-items: center; z-index: 10; width: 90%; height: 52rpx; background: #df2f31; border: 4rpx solid #fff; border-radius: 10rem; }
.search-bar image{ margin-left: 10rpx; width: 36rpx; height: 36rpx; }
.search-bar input{ margin-right: 10rpx; width: 560rpx; height: 36rpx; font-size: 0.9em; color: #fff; }

.search-content{ position: fixed; top: 0; left: 0; z-index: 9999999999999999; padding-bottom: 6%; width: 100%; height: 97%; background: #f3f5f6; overflow: hidden; }
.search-card-bar{ display: flex; justify-content: space-between; align-items: center; padding: 0 2.5%; width: 95%; height: 80rpx; background: #262626; color: #fff; font-size: 16px; }
.search-card-bar input{ padding: 0 20rpx; width: 560rpx; height: 56rpx; color: #333; background: #fff; border-radius: 5rpx; }
.hot-search{ margin: 3% 4%; font-size: 16px; color: #666; }
.search-list{ display: flex; justify-content: flex-start; align-items: center; flex-wrap: wrap; padding: 0 20rpx; color: #666; font-size: 16px; }
.search-item{ margin: 0 8rpx 16rpx; padding: 8rpx 16rpx; text-align: center; line-height: 27rpx; border: 1rpx solid #666; border-radius: 5rpx; }

.search-card-content{ position: relative; padding-bottom: 10%; width: 100%; height: 90%; text-align: center; overflow: hidden; }
.search-card-list{ margin: 0 auto; width: 100%; height: 97%; text-align: left; }
.search-card-item{ display: inline-block; position: relative; margin: 0; width: 50%; text-align: center; }
.search-card-item image{ display: block; margin: 0 auto; width: 93%; }
.search-card-item view{ display: flex; justify-content: space-between; align-items: center; position: absolute; bottom: 0%; left: 4%; width: 93%; height: 45rpx; background: rgba(0, 0, 0, 0.6); color: #fff; }
.search-card-item text{ width: 50%; height: 100%; text-align: center; line-height: 45rpx; font-size: 12px; }
.search-card-item text:first-child{ text-overflow: ellipsis; overflow: hidden; white-space: nowrap; }

.nav-item{ width: 25%; height: 120rpx; text-align: center; }
.nav-item image{ display: block; margin: 6rpx auto 0; width: 70rpx; height: 70rpx }
.nav-item text{ display: block; margin: 0 auto; font-size: 14px; }

.bottom-nav-bar{ display: flex; justify-content: space-between; align-items: center; position: fixed; bottom: 0; left: 0; width: 100%; height: 120rpx; border-top: 1rpx solid #ccc; background: #fff; }

.more-card-loading{ display: flex; justify-content: space-between; align-content: space-between; flex-wrap: wrap; position: absolute; top: 25%; left: 42%; width: 150rpx; height: 150rpx; /* background: #333; */ animation: loading 2.4s infinite; }
.more-card-loading view{ width: 35%; height: 35%; background: rgba(255, 255, 255, 0.8); border-radius: 10rem; }

@keyframes loading{
  0%{ transform: rotate(0deg); }
  50%{ transform: rotate(360deg); }
  100%{ transform: rotate(0deg); }
}



.scan-code{ position: fixed; top: 0; left: 0; width: 100%; height: 100%; z-index: 999999999999999; }
.code-shadow{ position: absolute; top: 0; left: 0; z-index: 10; width: 100%; height: 100%; background: #000; opacity: 0.6; }
.message-arrow{ position: relative; top: 2%; left: 75%; z-index: 100; width: 86rpx; }
.message-arrow image{ display: block; width: 100%; }
.message-content{ position: absolute; top: 12%; left: 5%; width: 90%; z-index: 100; }
.message-content image{ display: block; width: 100%; }
.code{ position: absolute; top: 175rpx; left: 37rpx; z-index: 100; padding: 50rpx; width: 576rpx; height: 563rpx; background: #fff; border-radius: 1rem; color: #1a1a1a; }
.image-content{ margin: 0 auto 20rpx; text-align: center; font-size: 32rpx; font-weight: bold; }
.image-content view{ margin: 0 auto 20rpx; text-align: center; }
.image-content view:last-child{ margin: 0 auto; width: 357rpx; height: 357rpx; border-radius: 10rem; overflow: hidden; }
.image-content image{ display: block; width: 100%; }
.name-content view{ margin: 0 auto 20rpx; text-align: center; font-size: 26rpx; font-weight: bold; }
.copy-name{ margin: 0 auto; width: 382rpx; height: 82rpx; text-align: center; line-height: 82rpx; background: #ff95ab; border-radius: 10rem; color: #fff; }