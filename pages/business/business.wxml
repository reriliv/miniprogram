<view class="propagate-content">
  <block wx:for='{{list}}' wx:key='index'>
    <view class="propagate-item"><image mode='widthFix' src='{{item.imageUrl}}'></image></view>
  </block>
</view>
<view class="consult" bindtap='makeCard'> 点击咨询客服 </view>
<block wx:if='{{isMake}}'>
  <view class="scan-code">
    <view class="shadow" bindtap='closeShadow'></view>
    <view class="code"><image src='../assets/ewm.png' mode='widthFix'></image></view>
  </view>
</block>